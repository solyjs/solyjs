{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2017"],
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "stripInternal": true,
    "pretty": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "declaration": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
      "build",
      "node_modules"
  ]
}